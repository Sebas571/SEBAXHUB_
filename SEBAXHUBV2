local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- GUI creation
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Sebaxhub"
screenGui.Parent = player:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 250, 0, 200)
mainFrame.Position = UDim2.new(0.5, -125, 0.5, -100)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
mainFrame.BorderSizePixel = 0
mainFrame.AnchorPoint = Vector2.new(0.5,0.5)
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 18)
corner.Parent = mainFrame

mainFrame.Active = true
mainFrame.Draggable = true

local title = Instance.new("TextLabel")
title.Text = "Sebaxhub"
title.Font = Enum.Font.FredokaOne
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextSize = 22
title.BackgroundTransparency = 1
title.Size = UDim2.new(1,0,0,36)
title.Parent = mainFrame

-- Botão de aumentar velocidade
local speedUpBtn = Instance.new("TextButton")
speedUpBtn.Text = "Aumentar Velocidade"
speedUpBtn.Font = Enum.Font.FredokaOne
speedUpBtn.TextColor3 = Color3.fromRGB(255,255,255)
speedUpBtn.TextSize = 18
speedUpBtn.BackgroundColor3 = Color3.fromRGB(60,220,120)
speedUpBtn.Size = UDim2.new(0.85,0,0,36)
speedUpBtn.Position = UDim2.new(0.075,0,0.44,0)
speedUpBtn.Parent = mainFrame

local upCorner = Instance.new("UICorner")
upCorner.CornerRadius = UDim.new(0, 12)
upCorner.Parent = speedUpBtn

-- Botão de diminuir velocidade
local speedDownBtn = Instance.new("TextButton")
speedDownBtn.Text = "Diminuir Velocidade"
speedDownBtn.Font = Enum.Font.FredokaOne
speedDownBtn.TextColor3 = Color3.fromRGB(255,255,255)
speedDownBtn.TextSize = 18
speedDownBtn.BackgroundColor3 = Color3.fromRGB(220,60,60)
speedDownBtn.Size = UDim2.new(0.85,0,0,36)
speedDownBtn.Position = UDim2.new(0.075,0,0.72,0)
speedDownBtn.Parent = mainFrame

local downCorner = Instance.new("UICorner")
downCorner.CornerRadius = UDim.new(0, 12)
downCorner.Parent = speedDownBtn

-- Velocidade real
local minSpeed = 8
local maxSpeed = 100
local speedStep = 8

local function getHumanoid()
    local char = player.Character or player.CharacterAdded:Wait()
    return char:FindFirstChildOfClass("Humanoid")
end

local function setSpeed(newSpeed)
    local humanoid = getHumanoid()
    if humanoid then
        humanoid.WalkSpeed = math.clamp(newSpeed, minSpeed, maxSpeed)
        game.StarterGui:SetCore("SendNotification", {
            Title = "Sebaxhub",
            Text = "Velocidade atual: " .. humanoid.WalkSpeed,
            Duration = 1.5
        })
    end
end

speedUpBtn.MouseButton1Click:Connect(function()
    local humanoid = getHumanoid()
    if humanoid then
        setSpeed(humanoid.WalkSpeed + speedStep)
    end
end)

speedDownBtn.MouseButton1Click:Connect(function()
    local humanoid = getHumanoid()
    if humanoid then
        setSpeed(humanoid.WalkSpeed - speedStep)
    end
end)

UserInputService.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.KeyCode == Enum.KeyCode.E then
        local humanoid = getHumanoid()
        if humanoid then
            setSpeed(humanoid.WalkSpeed + speedStep)
        end
    elseif input.KeyCode == Enum.KeyCode.R then
        local humanoid = getHumanoid()
        if humanoid then
            setSpeed(humanoid.WalkSpeed - speedStep)
        end
    end
end)

-- Mantém a velocidade ao respawn
player.CharacterAdded:Connect(function(char)
    local humanoid = char:WaitForChild("Humanoid")
    humanoid.WalkSpeed = minSpeed
end)
